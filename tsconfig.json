{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "rootDir": "./modules",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
  },
  "include": ["modules"],
  "exclude": [
    "node_modules",
    "**/__test__/*",
    "**/dist/**/*"
  ]
}
